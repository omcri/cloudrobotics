<?xml version="1.0" encoding="ASCII"?>
<occi:Extension xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:occi="http://schemas.ogf.org/occi/core/ecore" name="omcricore" scheme="http://omcri.org/cloudrobotics/core#">
  <import href="http://schemas.ogf.org/occi/core#/"/>
  <kinds name="RobotLink" scheme="http://omcri.org/cloudrobotics/core#" title="Generic robotlink to link resources with a robot">
    <parent href="http://schemas.ogf.org/occi/core#//@kinds[term='link']"/>
  </kinds>
  <kinds name="Robot" scheme="http://omcri.org/cloudrobotics/core#" title="Generic robot">
    <parent href="http://schemas.ogf.org/occi/core#//@kinds[term='resource']"/>
  </kinds>
  <mixins name="Connection" scheme="http://omcri.org/cloudrobotics/core#" title="Connect/disconnect to robot" applies="//@kinds[term='robot']">
    <attributes name="timeOut" mutable="true" description="Timeout session in seconds if no connections"/>
    <actions name="connect" scheme="http://omcri.org/cloudrobotics/core/connection/action#"/>
    <actions name="disconnect" scheme="http://omcri.org/cloudrobotics/core/connection/action#"/>
  </mixins>
  <mixins name="Sensor" scheme="http://omcri.org/cloudrobotics/core#" title="Generic sensor" applies="//@kinds[term='robot']"/>
  <mixins name="ColorSensor" scheme="http://omcri.org/cloudrobotics/core#" title="Sensor color detection" depends="//@mixins[term='sensor']">
    <attributes name="color" mutable="true" type="//@types.0"/>
    <attributes name="light" mutable="true"/>
    <attributes name="darkness" mutable="true"/>
    <attributes name="colorLamp" mutable="true" type="//@types.0"/>
    <actions name="senseColor" scheme="http://omcri.org/cloudrobotics/core/colorsensor/action#"/>
  </mixins>
  <mixins name="FlightActuator" scheme="http://omcri.org/cloudrobotics/core#" depends="//@mixins[term='actuator']">
    <attributes name="horizontalTilt" mutable="true"/>
    <attributes name="verticalTilt" mutable="true"/>
    <attributes name="horizontalSpeed" mutable="true"/>
    <attributes name="verticalSpeed" mutable="true"/>
    <actions name="move" scheme="http://omcri.org/cloudrobotics/core/flightactuator/action#"/>
    <actions name="land" scheme="http://omcri.org/cloudrobotics/core/flightactuator/action#"/>
    <actions name="takeOff" scheme="http://omcri.org/cloudrobotics/core/flightactuator/action#"/>
  </mixins>
  <mixins name="TouchSensor" scheme="http://omcri.org/cloudrobotics/core#" title="Touch detection" depends="//@mixins[term='sensor']">
    <attributes name="touch" mutable="true" type="//@types.0"/>
    <actions name="senseTouch" scheme="http://omcri.org/cloudrobotics/core/touchsensor/action#" title=""/>
  </mixins>
  <mixins name="UltrasonicSensor" scheme="http://omcri.org/cloudrobotics/core#" title="Sensor distance detection" depends="//@mixins[term='sensor']">
    <attributes name="distance" mutable="true"/>
    <actions name="senseDistance" scheme="http://omcri.org/cloudrobotics/core/ultrasonicsensor/action#"/>
  </mixins>
  <mixins name="Actuator" scheme="http://omcri.org/cloudrobotics/core#" title="Generic actuator" applies="//@kinds[term='robot']"/>
  <mixins name="MotionActuator" scheme="http://omcri.org/cloudrobotics/core#" depends="//@mixins[term='actuator']">
    <attributes name="angle" mutable="true" default="45"/>
    <attributes name="speed" mutable="true" default="100"/>
    <attributes name="duration" mutable="true" default="1000"/>
    <actions name="moveForward" scheme="http://omcri.org/cloudrobotics/core/motionactuator/action#"/>
    <actions name="moveBackward" scheme="http://omcri.org/cloudrobotics/core/motionactuator/action#"/>
    <actions name="turnRight" scheme="http://omcri.org/cloudrobotics/core/motionactuator/action#"/>
    <actions name="turnLeft" scheme="http://omcri.org/cloudrobotics/core/motionactuator/action#"/>
    <actions name="stop" scheme="http://omcri.org/cloudrobotics/core/motionactuator/action#"/>
  </mixins>
  <mixins name="MouthActuator" scheme="http://omcri.org/cloudrobotics/core#" depends="//@mixins[term='actuator']">
    <actions name="openMouth" scheme="http://omcri.org/cloudrobotics/core/mouthactuator/action#"/>
    <actions name="closeMouth" scheme="http://omcri.org/cloudrobotics/core/mouthactuator/action#"/>
  </mixins>
  <types xsi:type="occi:EnumerationType" name="Color">
    <literals name="WHITE"/>
    <literals name="BLACK"/>
    <literals name="BLUE"/>
    <literals name="YELLOW"/>
    <literals name="RED"/>
    <literals name="GREEN"/>
  </types>
  <types xsi:type="occi:EnumerationType" name="Touch">
    <literals name="PRESSED"/>
    <literals name="RELEASED"/>
    <literals name="HIT"/>
  </types>
</occi:Extension>
